@model IEnumerable<SportBook.Models.User>
@{
    ViewData["Title"] = "PlayerListWindow";
}


<h2>PlayerListWindow</h2>

<form asp-action="PlayerListWindow" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="filter" value="@ViewData["filter"]" />
            <input type="submit" value="search" class="btn btn-default" /> |
            <a asp-action="PlayerListWindow">Back to Full List</a>
        </p>
    </div>
</form>
<div class="list-group" id="list-tab" role="tablist">

    @foreach (User user in ViewData["players"] as IList<User>)
    {
        @*<li class="list-group-item">@name</li>*@
        <a class="list-group-item list-group-item-action" asp-action="UserProfileWindow" asp-route-id="@user.UserId">@user.Nickname</a>
    }

</div>

