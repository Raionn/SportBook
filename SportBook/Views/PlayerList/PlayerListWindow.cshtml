@{
    ViewData["Title"] = "PlayerListWindow";
}


<h2>PlayerListWindow</h2>

<form asp-action="PlayerListWindow" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="filter" value="@ViewData["filter"]" />
            <input type="submit" value="filter" class="btn btn-default" /> |
            <a asp-action="PlayerListWindow">Back to Full List</a>
        </p>
    </div>
</form>
<ul class="list-group">

    @foreach(string name in ViewData["players"] as IList<string>)
    {
        <li class="list-group-item">@name</li>
    }

</ul>