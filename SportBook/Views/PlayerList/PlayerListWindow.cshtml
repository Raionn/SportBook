@model IEnumerable<SportBook.Models.User>
@{
    ViewData["Title"] = "PlayerListWindow";
}


<h2>PlayerListWindow</h2>

<form asp-action="PlayerListWindow" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="filter" value="@ViewData["filter"]" />
            <input type="submit" value="search" class="btn btn-default" /> |
            <a asp-action="PlayerListWindow">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_account)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_account)
                </td>

            </tr>
        }
    </tbody>
</table>

