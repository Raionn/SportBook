@model IEnumerable<SportBook.Models.User>
@{
    ViewData["Title"] = "TeamManagementWindow";
}

<h1>TeamManagementWindow</h1>

<li class="list-group-item list-group-item-action">
    @ViewData["name"]

    <a asp-action="removePlayerFromTeam" asp-route-teamid=@ViewData["teamid"]>Leave</a>
</li>
<br />

<h5>All players</h5>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_account)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_account)
                </td>
                <td>
                    <a asp-action="sendInvitationToSelectedPlayer" asp-route-teamid="@ViewData["teamid"]" asp-route-userid="@item.UserId" asp-route-name="@ViewData["name"]">Invite</a>
                </td>
            </tr>
        }
    </tbody>
</table>